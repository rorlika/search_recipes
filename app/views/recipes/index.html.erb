<h4>Recipes</h4>

<%= form_tag(recipes_path, method: :get) do %>
  <div class="card-body">
    <label>ingredients:</label>
    <input type="text" data-role="tagsinput" name="ingredients" class="form-control"/>
  </div>
  <%= submit_tag('search') %>
<% end %>

<div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-sm-3">
      <div class="card">
        <%= link_to recipe_path(recipe.id) do %>
          <img class="card-img-top" src="<%= default_image(recipe) %>" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"><%= recipe.name %></h5>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
